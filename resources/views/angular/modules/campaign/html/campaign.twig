<div ng-controller="CampaignCtrl">
<div class="portlet box red">
    
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Filter Option's</div>
        <div class="tools" ng-init="show=true">
            <a href="#" ng-click="show = !show" class="collapse"> </a>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-body">
            <div class="form-group">
                <form action="#" class="mt-repeater form-horizontal">
                    <div data-repeater-list="group-a">
                        <div data-repeater-item class="mt-repeater-item">
                            <!-- jQuery Repeater Container -->
                            <div class="mt-repeater-input">
                                <label class="control-label">ID</label>
                                <br/>
                                <input ng-model="id" type="text" name="text-input" width="100px" class="form-control" /> </div>
                            <div class="mt-repeater-input">
                                <label class="control-label">Name</label>
                                <br/>
                                <!--select-http config="{url:'https://api.github.com/search/repositories'}"></select-http-->
                                <select 
                                    select-http 
                                    class           = "js-select-http form-control" 
                                    dir             = "rtl"
                                    config          = "{url:'https://api.github.com/search/repositories'}"
                                    change-value    = "changeValue()"
                                    var-select      = "varSelect"
                                ></select>
                            </div>
                            <div class="mt-repeater-input">
                                <label class="control-label">Status</label>
                                <br/>
                                <select name="select-input" class="form-control">
                                    <option value="A" selected>Marketing</option>
                                    <option value="B">Creative</option>
                                    <option value="C">Development</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <a href="javascript:;" data-repeater-create class="btn btn-success mt-repeater-add">
                        <i class="fa fa-search"></i> Search</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <fg-header title="list.header.title"/>
            <div class="portlet-body flip-scroll">

                <div class="dataTables_wrapper">
                    <div class="row">
                        <fg-table heads="list.table.head" items="list.items"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <fg-paginator on-change-page="list.table.paginator.changePage" pages-by-rotatore="list.table.paginator.pagesByRotatore" items-by-page="list.itemsByPage" on-page="list.table.paginator.onPage" total-items="list.totalItems"/>
                    </div>
                </div>
                    
            </div>
        </div>

        

    </div>

    

</div>
</div>
